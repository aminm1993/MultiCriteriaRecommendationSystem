<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:background="#ffffff"
            android:gravity="center"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/six"
                    android:id="@+id/img2" />
            </LinearLayout>



            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="2dp"
                android:background="#c2c2c2"/>
            <RelativeLayout

                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:id="@+id/linearLayout3"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/relativeSort">

                    <ImageView android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/shoppingbasket"

                        android:id="@+id/img3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مرتب سازی"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/price1"
                        android:layout_alignBottom="@+id/img3"
                        android:layout_toLeftOf="@+id/img3" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="حروف الفبا"
                        android:id="@+id/price2"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/price1" />

                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="2dp"
                android:background="#c2c2c2"/>
            <RelativeLayout
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:id="@+id/relative1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/relativeLayout">

                    <ImageView android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:src="@drawable/bike_delivery"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/img4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="فیلتر کردن"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/price3"
                        android:layout_gravity="right"
                        android:layout_alignBottom="@+id/img4"
                        android:layout_toLeftOf="@+id/img4" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="نام ، دسته بندی و ..."
                        android:id="@+id/price4"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/img4" />

                </RelativeLayout>


            </RelativeLayout>



        </LinearLayout>







        <RelativeLayout
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#c2c2c2"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:id="@+id/recyclerviewCategory"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            />

        <RelativeLayout
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#c2c2c2"/>


        <me.grantland.widget.AutofitTextView
            android:id="@+id/orderNotExist"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_border_button_inside_blue2"
            android:singleLine="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="از این قسمت کتاب های خاص خود را سفارش دهید"
            android:maxLines="1"
            android:textSize="19sp"
            autofit:minTextSize="9sp"
            />




        <RelativeLayout
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#c2c2c2"/>
        <LinearLayout
            android:id="@+id/linearExpandable"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/white_border_button_inside_white"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
        <ImageView
            android:layout_weight=".2"
            android:id="@+id/imgCat"
            android:background="@color/colorPrimary"
            android:layout_width="40dp"
            android:src="@drawable/quantum_ic_keyboard_arrow_down_white_36"
            android:layout_height="40dp" />

                <TextView
                    android:id="@+id/addressCategory"
                    android:layout_weight=".8"
                    android:text="توضیحات"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    />

            </LinearLayout>
        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:padding="5dp"

            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:text="ستیسنیتستیتسن تنستنستینت نستینسیتن سیتنستی نستینستینستنیتنستینسیتنست تسنیتسنیتسنتینستینستین تسنیتسنتی"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imgCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txtCategoryDesc"
                android:layout_gravity="center"
                android:textSize="17sp"
                />
        </LinearLayout>
        </LinearLayout>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recyclerview"
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="60dp"
            android:background="#bebebe"
            android:divider="@drawable/listviewborder"
            android:dividerHeight="8px"
            android:numColumns="3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/mablagh"
            android:layout_weight="0.60"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:background="@drawable/blue_border_button_inside_blue2"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="0 ریال"
            android:layout_height="50dp" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:tint="@color/white"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/help"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="4dp" />

</RelativeLayout>