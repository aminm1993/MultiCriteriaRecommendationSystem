<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin" >

            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_menu"
                style="@style/Widget.AppCompat.ActionButton"
                />
            <TextView
                android:id="@+id/toolbar_title"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_height="fill_parent"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:src="@drawable/header"
                android:layout_height="?attr/actionBarSize" />





        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <FrameLayout

        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:id="@+id/scrollView1"
            android:layout_height="match_parent">
            <LinearLayout
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:background="#eaeaea"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent">

                <ir.mohammadpour.app.ui.widget.slider.SliderLayout
                    android:id="@+id/slider"

                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    />


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/txt1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:text="سرویس ویژه اسگاد"
                    android:gravity="right"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:clickable="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:layout_height="wrap_content">

                    <LinearLayout


                        android:id="@+id/expandableLayout"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/button_click"

                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:orientation="horizontal">


                            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/icon"

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="left|center"
                                android:layout_margin="5dp"

                                android:layout_marginRight="3dp"
                                android:padding="3dp"
                                android:src="@drawable/taxi_ic" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView

                                    android:id="@+id/service_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="right|center_vertical"
                                    android:layout_margin="7dp"
                                    android:gravity="right|center_vertical"
                                    android:padding="5dp"
                                    android:text="تاکسی آنلاین"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/service_name2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".7"
                                        android:padding="7dp"

                                        android:text="اسگاد بهترین سرویس آنلاین سفارش تاکسی"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_weight="0.3"
                                        android:padding="2dp"
                                        android:src="@drawable/appicon" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="7dp"
                        android:padding="4dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="@colorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_margin="5dp"
                            android:id="@+id/imgTaxi"
                            android:layout_width="match_parent"
                            android:background="@drawable/taxi_ic"
                            android:layout_height="10dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="46dp"
                    android:gravity="center"
                    android:text="انتخاب سرویس"
                    android:layout_above="@+id/lv"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/txt2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:text="خدمات دیگر اسگاد"
                    android:gravity="right"
                    android:layout_height="wrap_content" />


                <ir.mohammadpour.app.ui.widget.ExpandableHeightGridView
                    android:focusableInTouchMode="true"
                    android:layout_margin="3dp"
                    android:isScrollContainer="false"
                    android:id="@+id/lv"
                    android:numColumns="3"
                    android:focusable="false"
                    android:divider="#ffffff"
                    android:listSelector="#ffffff"
                    android:horizontalSpacing="3dp"
                    android:verticalSpacing="3dp"
                    android:layout_below="@+id/expandableLayout"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>