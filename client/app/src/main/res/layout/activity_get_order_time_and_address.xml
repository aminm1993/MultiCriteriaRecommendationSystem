<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

   >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/daryaft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="دریافت"
            android:textColor="#231616"
            android:textSize="19sp" />
        <LinearLayout
            android:id="@+id/daryaftLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#489ed7"

                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="20dp"

                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/bike_delivery" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="تاریخ و ساعت مراجعه پیک برای دریافت"
                        android:textColor="@color/white"
                        android:textSize="19sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:background="@drawable/blue_border_button"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/editdaryaft"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:text="انتخاب زمان"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:visibility="gone"
                    android:id="@+id/timeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:popupBackground="@color/white"
                    android:textColor="@color/colorPrimary" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/dateSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:popupBackground="@color/white"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tahvil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="تحویل"
            android:textColor="#231616"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/tahvilLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#489ed7"

                android:gravity="center|center_vertical"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"

                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/bike_delivery" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="تاریخ و ساعت مراجعه پیک برای تحویل"
                        android:textColor="@color/white"
                        android:textSize="19sp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView6"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:background="@drawable/blue_border_button"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/edittahvil"
                    android:layout_marginTop="8dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:text="انتخاب زمان"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/timeSpinner2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:popupBackground="@color/white"
                    android:textColor="@color/colorPrimary" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/dateSpinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:popupBackground="@color/white"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="آدرس"
            android:textColor="#231616"
            android:textSize="19sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/addressSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:popupBackground="@color/white"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="مبلغ قابل پرداخت"
            android:textColor="#231616"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:id="@+id/mablaghSefareshValue"
                    android:gravity="center"
                    android:text="50000 ریال" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#abb6e1" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:id="@+id/mablaghSefareshText"
                    android:gravity="center"
                    android:text="مبلغ سفارش" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#abb6e1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:gravity="center"
                    android:id="@+id/mablaghExtraValue"
                    android:text="50000 ریال" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#abb6e1" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:id="@+id/mablaghExtraText"
                    android:gravity="center"
                    android:text="هزینه پست" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/mablaghKolValue"
                    android:gravity="center"
                    android:text="50000 ریال" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#abb6e1" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:textStyle="bold"
                    android:id="@+id/mablaghKolText"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="مبلغ قابل پرداخت" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="نوع پرداخت"
            android:textColor="#231616"
            android:textSize="19sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center">

                <RadioButton

                    android:id="@+id/radioNaghdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="center"
                    android:text="نقدی"
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/radioEtebari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="اعتباری"
                    android:textColor="@color/colorPrimary" />

            </RadioGroup>

        </LinearLayout>




        <LinearLayout

            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="کد تخفیف"
                android:id="@+id/tatDiscount"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="45dp" />
            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"

                android:background="#ffffff"
                android:layout_height="wrap_content"
                app:ael_expanded="false"
                app:ael_duration="300"
                app:ael_interpolator="anticipateOvershoot"
                app:ael_orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/takhfif"

                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/black_border_button"
                    android:gravity="center"
                    android:hint="کد تخفیف"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_discount_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/black_border_button"
                    android:clickable="true"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="بررسی کد تخفیف"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                </LinearLayout>
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


        </LinearLayout>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="توضیحات"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#969696"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:background="@drawable/red_rounded_corners_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="انصراف از سفارش"
                android:textColor="@color/white"
                android:textSize="19sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sabt"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:background="@drawable/blue_border_button_inside_blue2"
                android:clickable="true"
                android:gravity="center"
                android:text="ثبت سفارش"
                android:textColor="@color/white"
                android:textSize="19sp"

                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</ScrollView>
