<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/giphy" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtWait"
        android:layout_height="wrap_content"
        android:text="در حال انتظار برای تاکسی..."
        android:gravity="center"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="101dp" />


    <ir.mohammadpour.app.ui.util.SlideView
        android:layout_width="match_parent"
        android:id="@+id/slidercancel"
        app:buttonBackgroundColor="#fff"
        app:reverseSlide="true"
        app:buttonImage="@drawable/ic_chevron_double_right_pink"
        app:slideBackgroundColor="@color/colorAccent"
        app:slideText="انصراف از سفر"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtWait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="لطفا صبر کنید ..."
        android:textColor="@color/colorAccent"
        android:id="@+id/txtWait2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:text="در حال یافتن نزدیک ترین اسگاد به شما"
        android:id="@+id/txtWait3"
        android:layout_below="@+id/txtWait2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
