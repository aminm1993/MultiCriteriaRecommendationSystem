<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bc"
        android:gravity="center_horizontal"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginTop="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/appicon" />

        <TextView
            android:id="@+id/txt_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="اسگاد سامانه جامع خدمات شهری"
            android:textColor="#000000"

            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="نرم افزار اسگاد دارای مجوز از وزارت کار و صنعت و معدن می باشد و کلیه حقوق مادی و معنوی آن محفوظ و تنها استفاده از مطالب آن همراه با ذکر منبع بلامانع است."
            android:textColor="#000000"
            android:textSize="15sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#4e5b5b5b"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_version_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="11.7.0"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <View
                android:layout_width="2px"
                android:layout_gravity="center"
                android:layout_height="10dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="نسخه :"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="شرکت ایده پردازان آیدین فردا"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>